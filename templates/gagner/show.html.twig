{% extends 'base.html.twig' %}

{% block title %}Gagner{% endblock %}

{% block body %}
    <h1 class="mx-auto" style="width: 200px; margin-top: 30px; margin-bottom: 30px;">Gagner</h1>

    <table class="table table-striped table-hover border-left border-primary">
        <tbody>
            <tr>
                <th>Idp</th>
                <td>{{ gagner[0].getIdp() }}</td>
            </tr>
            <tr>
                <th>Idf</th>
                <td>{{ gagner[0].getIdf() }}</td>
            </tr>
            <tr>
                <th>Idprix</th>
                <td>{{ gagner[0].getIdprix() }}</td>
            </tr>
            <tr>
                <th>Annee_prix</th>
                <td>{{ gagner[0].getAnneePrix() }}</td>
            </tr>
        </tbody>
    </table>


    <table style="border-collapse: separate; border-spacing: 3px;">
        <tbody>
            <td><button type="button" class="btn btn-success"><a href="{{ path('gagner_index') }}">Retour</a></button></td>
            {% if is_granted('ROLE_ADMIN') %}
                <td><button type="button" class="btn btn-warning"><a href="{{ path('gagner_edit', { 'idp': gagner[0].getIdp().getId(), 'idf': gagner[0].getIdf().getId(), 'idprix': gagner[0].getIdprix().getId() }) }}">Editer</a></button></td>
                <td>{{ include('gagner/_delete_form.html.twig') }}</td>
            {% endif %}
        </tbody>
    </table>
{% endblock %}
