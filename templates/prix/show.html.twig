{% extends 'base.html.twig' %}

{% block title %}Affichage Prix{% endblock %}

{% block body %}
    <h1 class="mx-auto" style="width: 200px; margin-top: 30px; margin-bottom: 30px;">Prix</h1>

    <table class="table table-striped table-hover border-left border-primary">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prix.id }}</td>
            </tr>
            <tr>
                <th>Idc</th>
                <td>{{ prix.idc }}</td>
            </tr>
            <tr>
                <th>Categorie_prix</th>
                <td>{{ prix.categoriePrix }}</td>
            </tr>
        </tbody>
    </table>

    <table style="border-collapse: separate; border-spacing: 3px;">
        <tbody>
            <td><button type="button" class="btn btn-success"><a href="{{ path('prix_index') }}">Retour</a></button></td>

            {% if is_granted('ROLE_ADMIN') %}
            <td><button type="button" class="btn btn-warning"><a href="{{ path('prix_edit', {'idprix': prix.id}) }}">Editer</a></button></td>
            <td>{{ include('prix/_delete_form.html.twig') }}</td>
            {% endif %}

        </tbody>
    </table>
{% endblock %}
