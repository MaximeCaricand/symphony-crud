{% extends 'base.html.twig' %}

{% block title %}Affichage Film{% endblock %}

{% block body %}
    <h1 class="mx-auto" style="width: 200px; margin-top: 30px; margin-bottom: 30px;">Film</h1>

    <table class="table table-striped table-hover border-left border-primary">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Nom_f</th>
                <td>{{ film.nomF }}</td>
            </tr>
            <tr>
                <th>Date_sortie</th>
                <td>{{ film.dateSortie ? film.dateSortie|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <table style="border-collapse: separate; border-spacing: 3px;">
        <tbody>
            <td><button type="button" class="btn btn-success"><a href="{{ path('film_index') }}">Retour</a></button></td>
            <td><button type="button" class="btn btn-warning"><a href="{{ path('film_edit', {'idf': film.id}) }}">Editer</a></button></td>
            <td>{{ include('film/_delete_form.html.twig') }}</td>
        </tbody>
    </table>
{% endblock %}
